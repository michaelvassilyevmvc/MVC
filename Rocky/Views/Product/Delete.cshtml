@model Rocky.Models.Product
@using Rocky_Utility

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                             <button type="submit" class="btn btn-danger w-100">Delete</button>                                                   
                        </div>
                        <div class="col">
                            <a asp-action="Index"  class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>&nbsp;Back </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if(Model.Id != 0)
                {
                <img src="@WC.ImagePath@Model.Image" 
                    style="border-radius:5px; border:1px solid #bbb;"
                    class="w-100" />
                }
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>
         $(document).ready(function() {
            $('.summernote').summernote({
                disable:true
                height:250 
            });
        });
    </script>
}