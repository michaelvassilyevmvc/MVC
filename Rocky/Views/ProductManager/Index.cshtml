@model IEnumerable<Rocky.Models.ProductManager>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список товаров</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Create"  class="btn btn-primary">
                <i class="fas fa-plus"></i>&nbsp;Создать новый товар
            </a>
        </div>
    </div>
    <br /><br />

    @if(Model.Count() > 0){
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Название</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="80%">@obj.Name</td>
                        <td class="text-center">
                            <a asp-controller="Product" asp-action="Edit" asp-route-Id="@obj.Id"  class="btn btn-primary mx-2" title="Редактировать">
                                <i class="fas fa-edit"></i>&nbsp;
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id"  class="btn btn-danger" title="Удалить">
                                <i class="fas fa-trash-alt"></i>&nbsp;
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else{
        <p class="text-center">Список товаров пуст</p>
    }

</div>

